-- Parser 

import Ostap;
import Lexer;
import List;
import Fun;

-- A parser of "something" in brackets; l, r are left and right
-- brackets as parsers, p --- a parser of "something"
fun inbr (l, p, r) {
  syntax (-l p -r)
}

-- Primary expression
var primary = memo $ eta syntax (x=decimal {Const (stringInt (x))} |
                                 x=lident  {Var (x)}               |
                                 inbr[s("("), exp, s(")")]),
      exp = memo $ eta expr ({     
        [Left, {[ s ("!!"), fun (l, op, r) {Binop (op, l, r)}] }],
        [Left, {[ s ("&&"), fun (l, op, r) {Binop (op, l, r)}] }],   

        [Nona, {[ s ("=="), fun (l, op, r) {Binop (op, l, r)}],
                [ s ("!="), fun (l, op, r) {Binop (op, l, r)}],
                [ s ("<"), fun (l, op, r) {Binop (op, l, r)}],
                [ s ("<="), fun (l, op, r) {Binop (op, l, r)}],
                [ s (">"), fun (l, op, r) {Binop (op, l, r)}],
                [ s (">="), fun (l, op, r) {Binop (op, l, r)}] }],

        [Left, {[ s ("+"), fun (l, op, r) {Binop (op, l, r)}],
                [ s ("-"), fun (l, op, r) {Binop (op, l, r)}] }],

        [Left, {[ s ("*"), fun (l, op, r) {Binop (op, l, r)}],
                [ s ("/"), fun (l, op, r) {Binop (op, l, r)}],
                [ s ("%"), fun (l, op, r) {Binop (op, l, r)}] }]
      }, primary);

var stmtUnit = memo $ eta syntax (
  kSkip {Skip} |
  kRead x=inbr[s("("), lident, s(")")] {Read(x)} |
  kWrite expr=inbr[s("("), exp, s(")")] {Write(expr)} |
  x=lident s[":="] expr=exp {Assn(x, expr)}
);

var stmt = memo $ eta syntax (
  stmtUnit | 
  x=stmtUnit s[";"] xs=stmt {Seq(x, xs)}
);
   

-- Public top-level parser
public parse = stmt;
             
